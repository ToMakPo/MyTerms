<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle" android:tint="#8064B4D3">
            <corners android:radius="5dp" />

            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" android:tint="#fff">
            <corners android:radius="5dp" />

            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp" />
        </shape>
    </item>
</selector>